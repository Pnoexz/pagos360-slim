{
    "name": "pnoexz/pagos360-slim",
    "type": "project",
    "config": {
        "framework": {
            "php": "7"
        }
    },
    "require": {
        "slim/slim": "^3",
        "vlucas/phpdotenv": "^2.4",
        "psr/log": "^1.0",
        "vlucas/spot2": "^2.2",
        "pnoexz/php-collection": "^0",
        "zircote/swagger-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "squizlabs/PHP_CodeSniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Pagos360Slim\\": "app/",
            "Pagos360\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "vendor/bin/swagger app src -o public"
        ],
        "post-update-cmd": [
            "vendor/bin/swagger app src -o public"
        ]
    },
    "license": "GPL 3.0",
